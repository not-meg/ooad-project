<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.FacultyDashboardController"
           style="-fx-background-color: linear-gradient(to bottom, #ECEFF1, #CFD8DC);">

    <VBox spacing="40" alignment="center" style="-fx-padding: 60;">

        <!-- Title -->
        <Label text="Welcome Faculty" 
               style="-fx-font-size: 28px; 
                      -fx-font-weight: bold; 
                      -fx-text-fill: #263238; 
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>

        <!-- Subtitle -->
        <Label text="Manage your teams and projects here." 
               wrapText="true" maxWidth="500"
               style="-fx-font-size: 14px; 
                      -fx-text-fill: #546e7a; 
                      -fx-alignment: center;"/>
        
        <!-- Faculty Info Section -->
        <VBox spacing="20" alignment="center" style="
              -fx-background-color: white;
              -fx-padding: 20;
              -fx-background-radius: 8;
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);
              -fx-min-width: 400px;
              -fx-max-width: 600px;">
            
            <Label text="Faculty Information" style=" 
                  -fx-font-size: 20px; 
                  -fx-font-weight: bold; 
                  -fx-text-fill: #37474F;"/>
            
            <GridPane hgap="20" vgap="10" alignment="center">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                    <ColumnConstraints minWidth="250" halignment="LEFT"/>
                </columnConstraints>

                <!-- Faculty Name -->
                <Label text="Name:" style="-fx-font-weight: bold; -fx-text-fill: #546e7a;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="facultyNameLabel" text="Dr. A. Sharma" style="-fx-text-fill: #37474F;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Department -->
                <Label text="Department:" style="-fx-font-weight: bold; -fx-text-fill: #546e7a;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="departmentLabel" text="Computer Science" style="-fx-text-fill: #37474F;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            
        </VBox>
        
        <!-- Buttons -->
        <HBox spacing="20" alignment="center">
            <Button text="View Teams" fx:id="viewTeamsButton" onAction="#handleViewTeams" style="
                -fx-background-color: #546e7a;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-padding: 10 25;
                -fx-cursor: hand;
                -fx-background-radius: 3;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);
            "/>
            
            <Button text="Log Out" fx:id="logoutButton" onAction="#handleLogout" style="
                -fx-background-color: #D32F2F;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-padding: 10 25;
                -fx-cursor: hand;
                -fx-background-radius: 3;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);
            "/>
        </HBox>
        
    </VBox>
</StackPane>
