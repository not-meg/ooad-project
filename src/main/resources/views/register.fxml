<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.RegisterController"
           style="-fx-background-color: linear-gradient(to bottom, #eceff1, #cfd8dc);">
    
    <VBox spacing="15" alignment="center" style="-fx-padding: 40;">
        
        <!-- Title -->
        <Label text="Register Your Capstone Team" 
               style="-fx-font-size: 22px; 
                      -fx-font-weight: bold; 
                      -fx-text-fill: #263238;"/>

        <!-- Team Members -->
        <VBox spacing="10">
            <Label text="Team Members (4 students)" style="-fx-font-weight: bold; -fx-text-fill: #37474f;"/>
            
            <GridPane hgap="10" vgap="10">
                <children>
                    <Label text="Member 1:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="fullName1" promptText="Full Name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField fx:id="email1" promptText="Email" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="srn1" promptText="SRN" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Member 2:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="fullName2" promptText="Full Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="email2" promptText="Email" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="srn2" promptText="SRN" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Member 3:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="fullName3" promptText="Full Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="email3" promptText="Email" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="srn3" promptText="SRN" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Member 4:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="fullName4" promptText="Full Name" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <TextField fx:id="email4" promptText="Email" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                    <TextField fx:id="srn4" promptText="SRN" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                </children>
            </GridPane>
        </VBox>

        <!-- Project Details -->
        <VBox spacing="10">
            <Label text="Project Details" style="-fx-font-weight: bold; -fx-text-fill: #37474f;"/>

            <TextField fx:id="guideName" promptText="Faculty Guide Name" style="-fx-pref-width: 400;"/>
            <TextField fx:id="projectTitle" promptText="Project Title" style="-fx-pref-width: 400;"/>

            <ComboBox fx:id="projectDomain" promptText="Select Project Domain" style="-fx-pref-width: 400;"/>
        </VBox>

        <!-- Password Fields -->
        <VBox spacing="10">
            <Label text="Set Team Password" style="-fx-font-weight: bold; -fx-text-fill: #37474f;"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 400;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-pref-width: 400;"/>
        </VBox>

        <!-- Register Button -->
        <Button text="Register" onAction="#handleRegisterButton" style="
            -fx-background-color: #546e7a;
            -fx-text-fill: white;
            -fx-font-weight: bold;
            -fx-font-size: 14px;
            -fx-padding: 10 25;
            -fx-cursor: hand;
            -fx-background-radius: 3;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);
        "/>

    </VBox>
</StackPane>
