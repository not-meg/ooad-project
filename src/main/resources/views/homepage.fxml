<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.HomepageController">
    <VBox spacing="20" alignment="center" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe); -fx-padding: 50;">
        
        <!-- Title -->
        <Label text="Welcome to the Capstone Management System" 
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);"/>
        
        <!-- Description -->
        <Label text="Manage your capstone projects efficiently with streamlined workflows, automated grading, and real-time collaboration. Enhance your project experience with an all-in-one platform designed for students and instructors." 
               wrapText="true" maxWidth="500"
               style="-fx-font-size: 14px; -fx-text-fill: white; -fx-alignment: center; -fx-opacity: 0.9;"/>
        
        <!-- Button Layout -->
        <HBox spacing="20">
            <Button text="Login" fx:id="loginButton" onAction="#handleLoginButton" style="
                -fx-background-color: #ff7eb3;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-background-radius: 20;
                -fx-padding: 8 15;
                -fx-cursor: hand;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>

            <Button text="Register" fx:id="registerButton" style="
                -fx-background-color: #00c9a7;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-background-radius: 20;
                -fx-padding: 8 15;
                -fx-cursor: hand;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>
        </HBox>
    </VBox>
</StackPane>
