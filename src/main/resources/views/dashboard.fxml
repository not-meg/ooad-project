<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.DashboardController"
           style="-fx-background-color: linear-gradient(to bottom, #eceff1, #cfd8dc);">
    
    <VBox spacing="30" alignment="center" style="-fx-padding: 60;">
        
        <!-- Title -->
        <Label text="Welcome to Capstone Project Management System" 
               style="-fx-font-size: 28px; 
                      -fx-font-weight: bold; 
                      -fx-text-fill: #263238; 
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>

        <!-- Subtitle -->
        <Label text="Manage capstone projects efficiently with smart tools and automation." 
               wrapText="true" maxWidth="450"
               style="-fx-font-size: 14px; 
                      -fx-text-fill: #546e7a; 
                      -fx-alignment: center;"/>
        
        <!-- Centered Button Layout -->
        <VBox alignment="center">
            <Button text="Get Started" fx:id="startButton" onAction="#handleStartButton" style="
                -fx-background-color: #546e7a;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 14px;
                -fx-padding: 12 30;
                -fx-cursor: hand;
                -fx-background-radius: 3;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);
            "/>
        </VBox>
        
    </VBox>
</StackPane>
