<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.SubmissionController">
    <VBox spacing="15" alignment="CENTER" prefWidth="600" layoutX="100" layoutY="80">
        <Label text="Project Submission" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <ComboBox fx:id="phaseComboBox" promptText="Select Phase" prefWidth="200" />

        <Button text="Choose File" onAction="#handleChooseFile" />
        <Label fx:id="fileLabel" text="No file selected." wrapText="true" />

        <Button text="Upload Submission" onAction="#handleUpload" />
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: green;" />

    </VBox>
</AnchorPane>
