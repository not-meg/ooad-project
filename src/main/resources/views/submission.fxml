<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.capstone.controller.SubmissionController"
           style="-fx-background-color: linear-gradient(to bottom, #ECEFF1, #CFD8DC);">

    <BorderPane>
        <!-- Top Bar -->
        <top>
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: #263238;">
                <Label text="â† Back" onMouseClicked="#goBack" style="
                    -fx-text-fill: white;
                    -fx-font-size: 16px;
                    -fx-cursor: hand;" />
                <Label text="Project Submission" style="
                    -fx-font-size: 18px;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;" />
            </HBox>
        </top>

        <!-- Main Content -->
        <center>
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
                <VBox spacing="20" alignment="CENTER" style="
                      -fx-background-color: white;
                      -fx-padding: 30;
                      -fx-background-radius: 10;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);
                      -fx-min-width: 400px; -fx-max-width: 500px;">

                    <Label text="Submit Your Phase Work" style="
                          -fx-font-size: 22px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #37474F;" />

                    <ComboBox fx:id="phaseComboBox" promptText="Select Phase" prefWidth="300"
                              style="-fx-background-color: #ECEFF1; -fx-padding: 5;" />

                    <Button text="Choose File" onAction="#handleChooseFile"
                            style="-fx-background-color: #546E7A; -fx-text-fill: white; -fx-cursor: hand;" />

                    <Label fx:id="fileLabel" text="No file selected." wrapText="true" style="
                          -fx-text-fill: #546e7a; -fx-font-size: 12px; -fx-padding: 0 10;" />

                    <Button text="Upload Submission" onAction="#handleUpload"
                            style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-cursor: hand;" />

                    <Label fx:id="statusLabel" text="" style="-fx-text-fill: green; -fx-font-size: 13px;" />
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
